<view class="p20">
  <!--教室名称-->
  <view class="f28 c444 bgfff br18 p30">
    <view class="fw7 f34">教室名称</view>
    <input maxlength="8"
           class="border-out br18 f28 i-title mt20"
           placeholder="请输入教室名称，8个字以内" />
  </view>
  <!--编辑教室简介（选填）-->
  <view class="f28 mt20 c444 bgfff br18 p30">
    <view class="fw7 f34">编辑教室简介（选填）</view>
    <input maxlength="-1"
           class="border-out br18 f28 i-title mt20"
           placeholder="编辑教室简介（选填）" />
  </view>
  <!--课程分类-->
  <view class="f28 c444 bgfff br18 p30 mt20">
    <view class="f34 show-time">
      <text class="fw7">编辑标签</text>
      <text class="c999 f28">标签4个字以内</text>
    </view>
    <input data-type="label"
          wx:for="{{ labelArr }}"
          wx:key="*22"
          data-index="{{ index }}"
          value="{{ item }}"
          class="mt20 mr30 courseType courseInput {{ labelIndex == index ? 'active' : '' }}" />
  </view>
  <!--教室地址-->
  <view class="f28 mt20 c444 bgfff br18 p30">
    <view class="fw7 f34">教室地址</view>
    <view class="jwqfont ">
      地址定位
    </view>
    <input maxlength="-1"
           class="border-out br18 f28 i-title mt20"
           placeholder="详细地址输入" />
  </view>
</view>


<view class="up-img p20">
  <view wx:for="{{ upImgArr }}" wx:key="*42" class="pr up-img-area">
    <image catchtap="imgOperation"
           mode="aspectFit"
           data-index="{{ index }}"
           lazy-load="{{true}}"
           class="br20"
           src="{{ item.temp }}"></image>
    <view hidden="{{ upImgArrProgress[index] >= 100 }}" class="up-progress pa">
      <view class="tac f20 cfff ">{{ !upImgArrProgress[index] ? '等待上传' : '上传中' }}</view>
      <progress border-radius="20"
                percent="{{ upImgArrProgress[index] || 0 }}"></progress>
    </view>
  </view>
  <view wx:if="{{ upImgArr.length < 9 }}" catchtap="wxUploadImg" class="up-btn br20 bb iconfont icon-fabu"></view>
</view>

<view class="zw"></view>


<!--错误弹窗-->
<import src="/template/template"></import>
<template wx:if="{{ toast.show }}" is="showToast" data="{{ ...toast }}"></template>
